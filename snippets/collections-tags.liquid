              <div class="product-collections">              
              {% assign pro_collection = product.collections %}
                  {% if pro_collection %}
                      All Collection: 
                      {% for col in pro_collection %}
                          <a class="links__collections" href="{{ col.url }}" title="{{ col.title }}">{{ col.title }}</a>{% unless forloop.last %},{% endunless %}
                      {% endfor %}
                  {% endif %}
              </div>
                
              <div class="product-tags">
                  {% if product.tags %}
                      Tags:
                      {% for tag in product.tags %}
                          <a class="links__collections" href="/collections/all/{{ tag | handleize }}">{{ tag }}</a>
                      {% endfor %}
                  {%  endif %}
              </div>

              <div class="product-tu">
                <strong>Tamanho Único</strong>
                  <div class="elementor-widget-container">
                      Pretende um tamanho à sua medida? Contacte:<a class="link" href="mailto:info@marggs.pt" target="_blank" rel="noopener"> info@marggs.pt</a>
                  </div>
              </div 
                            
